<BorderPane fx:id="root" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="visualizer.ViewController">
   <top>
      <ToolBar minHeight="0.0" minWidth="0.0" BorderPane.alignment="CENTER">
        <items>
            <ToggleButton mnemonicParsing="false" onAction="#pointsFired" selected="true" text="Points">
