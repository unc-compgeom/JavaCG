               <toggleGroup>
                  <ToggleGroup fx:id="drawMode" />
               </toggleGroup>
            </ToggleButton>
            <ToggleButton mnemonicParsing="false" onAction="#circleFired" text="c" toggleGroup="$drawMode" />
            <ToggleButton mnemonicParsing="false" onAction="#lineFired" text="l" toggleGroup="$drawMode" />
            <Button mnemonicParsing="false" onAction="#randomFired" text="r" />
            <Separator orientation="VERTICAL" />
            <ComboBox fx:id="algorithms" prefWidth="150.0" />
            <Button mnemonicParsing="false" onAction="#runFired" text="Run" />
